@model IEnumerable<EntityLayer.Concrete.Activity>

@{
    ViewData["Title"] = "ActivityReadAll";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<!DOCTYPE html>
<html lang="zxx">
<body>
    <section class="banner-bottom">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                    @foreach (var item in Model)
                    {
                        <div class="blog-grid-top">
                            <div class="b-grid-top">
                                <div class="blog_info_left_grid">
                                    <a href="single.html">
                                        <img src="~/ProjeTema/images/b1.jpg" class="img-fluid" alt="" style="background-color:#b3e0ff">
                                    </a>
                                </div>
                                <div class="blog-info-middle">
                                    <ul>
                                        <li>
                                            <a href="#">
                                                <i class="far fa-calendar-alt"></i> @item.ActivityCreateDate
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <h3>
                                <a href="single.html">@item.ActivityTitle</a>
                            </h3>
                            <p>
                                @item.ActivityContent
                            </p>
                            <a href="/Activity/Index/" class="btn btn-primary read-m" style="background-color:#3399ff">Etkinlik Listesi</a>
                        </div>
                    }

                    @await Component.InvokeAsync("CommentListByActivity", new { id = ViewBag.i })

                    @*@await Html.PartialAsync("~/Views/Comment/CommentListByActivity.cshtml")*@

                    @await Html.PartialAsync("~/Views/Comment/PartialAddComment.cshtml")
                </div>
                <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                    <div class="right-blog-info text-left">
                        <div class="tech-btm">
                            <img src="~/ProjeTema/images/banner1.jpg" class="img-fluid" alt="">
                        </div>

                        <h4>Mail Bültenine Abone Olun</h4>
                        @await Html.PartialAsync("~/Views/NewsLetter/SubscribeMail.cshtml")
                        @await Component.InvokeAsync("CategoryList")
                        @await Component.InvokeAsync("UserLastActivity")
                    </div>
                </aside>
            </div>
        </div>
    </section>
    <script src="js/jquery-2.2.3.min.js"></script>
    <script src="js/move-top.js"></script>
    <script src="js/easing.js"></script>
    <script>
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({
                    scrollTop: $(this.hash).offset().top
                }, 900);
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            /*
                                    var defaults = {
                                            containerID: 'toTop', // fading element id
                                        containerHoverID: 'toTopHover', // fading element hover id
                                        scrollSpeed: 1200,
                                        easingType: 'linear'
                                        };
                                    */

            $().UItoTop({
                easingType: 'easeOutQuart'
            });

        });
    </script>
    <a href="#home" class="scroll" id="toTop" style="display: block;">
        <span id="toTopHover" style="opacity: 1;"> </span>
    </a>
    <script src="js/bootstrap.js"></script>
</body>
</html>