@using EntityLayer.Concrete
@model List<Activity>

@{
    ViewData["Title"] = "ActivityListByAdmin";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">TÜM ETKİNLİK LİSTESİ</h4>
            <p class="card-description">
                <code>Admin olarak tüm etkinlikleri görüntüleyebilir ve silebilirsin.</code>
            </p>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Etkinlik Başlığı</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Kategori</th>
                        <th>Durum</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>

                        <th>@item.ActivityID</th>

                        <td>
                            <a href="/Activity/ActivityReadAll/@item.ActivityID">@item.ActivityTitle</a>
                        </td>


                        <td>@item.ActivityCreateDate</td>
                        <td>@item.Category.CategoryName</td>
                        <td>
                            @if (item.ActivityStatus)
                            {
                                <span class="badge badge-info">Aktif</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">Pasif</span>
                            }
                        </td>
                        <td><a href="/Activity/DeleteActivityAdmin/@item.ActivityID" class="btn btn-inverse-danger">Sil</a></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>