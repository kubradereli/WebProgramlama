@model EntityLayer.Concrete.User

@{
    ViewData["Title"] = "UserEditProfile";
    Layout = "~/Views/Shared/UsersLayout.cshtml";
}

@using (Html.BeginForm("UserEditProfile", "User", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">KULLANICI PROFİL BİLGİLERİ DÜZENLEME</h4>
                <br />
                @Html.HiddenFor(x=>x.UserID, new {@class="form-control"})
                <form class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Ad Soyad</label>
                        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Mail</label>
                        @Html.TextBoxFor(x => x.UserMail, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Şifre</label>
                        @Html.PasswordFor(x => x.UserPassword, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Görsel</label>
                        <input type="file" name="img[]" class="file-upload-default">
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-gradient-secondary" type="button">Resim seç</button>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Hakkında</label>
                        @Html.TextAreaFor(x => x.UserAbout, 10, 3, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-gradient-secondary mr-2">GÜNCELLE</button>
                    <button class="btn btn-light">İPTAL</button>
                </form>
            </div>
        </div>
    </div>
}