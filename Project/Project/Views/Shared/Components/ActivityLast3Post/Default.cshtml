@using EntityLayer.Concrete
@model List<Activity>

<div class="tech-btm">
    <h3>Son Postlar</h3>
    @foreach (var item in Model)
    {
        <div class="blog-grids row mb-3">
            <div class="col-md-5 blog-grid-left">
                <a href="/Activity/ActivityReadAll/@item.ActivityID">
                    <img src="@item.ActivityImage" class="card-img-top img-fluid" alt="">
                </a>
            </div>

            <div class="col-md-7 blog-grid-right">
                <h5>
                    <a href="/Activity/ActivityReadAll/@item.ActivityID">@item.ActivityContent.Substring(0,item.ActivityContent.Substring(0,50).LastIndexOf(" "))...</a>
                </h5>
                <div class="sub-meta">
                    <span>
                        <i class="far fa-clock"></i> @item.ActivityCreateDate
                    </span>
                </div>
            </div>

        </div>
    }
</div>