@using EntityLayer.Concrete
@model List<About>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<!DOCTYPE html>
<html lang="zxx">
<body>
    <section class="main-content-w3layouts-agileits">
        <div class="container">
            <h3 class="tittle" style="color:#3399ff">HAKKIMIZDA</h3>
            <div class="row inner-sec">
                <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                    <div class="blog-grid-top">
                        @foreach (var item in Model)
                        {
                            <div class="blog_info_left_grid">

                                <a href="single.html">
                                    <img src="@item.AboutImage1" class="img-fluid" alt="" style="background-color:#b3e0ff" width="700">
                                </a>
                            </div>
                            <h3 style="color:#3399ff">
                                SİTE HAKKINDA
                            </h3>

                            <p>
                                @item.AboutDetails1
                            </p>
                        }
                    </div>
                </div>
                <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                    <div class="right-blog-info text-left">
                        @await Html.PartialAsync("~/Views/About/SocialMediaAbout.cshtml")
                        <br /><br />
                        <div class="tech-btm">
                            <img src="~/ProjeTema/images/banner1.jpg" class="img-fluid" alt="">
                        </div>
                        <h2>Mail Bültenine Abone Olun</h2>
                        @await Html.PartialAsync("~/Views/NewsLetter/SubscribeMail.cshtml")
                    </div>
                </aside>
            </div>
        </div>
    </section>
</body>
</html>